{
  "name": "book-editor",
  "version": "0.1.1",
  "main": "./src/electron.js",
  "author": {
    "name": "martin",
    "email": "xiaomiquan@aliyun.com"
  },
  "keywords": [
    "book-editor",
    "story",
    "novel",
    "write",
    "book"
  ],
  "description": "The Ultimate Writing Tool for Epic Storytellers. ",
  "homepage": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "build": "run-s prepare:* svelte-build",
    "build:cap": "run-s build cap:sync",
    "dev": "cross-env NODE_ENV=development webpack serve",
    "electron": "run-s build pure-electron",
    "test": "jest",
    "svelte-build": "cross-env NODE_ENV=production webpack",
    "prepare:license": "license-checker --exclude \"MIT\" --json --customPath ./src/licenses.json > ./src/licenses.json",
    "pure-electron": "electron .",
    "cap:sync": "cap sync",
    "lint": "eslint --fix src/",
    "prettier": "prettier --write --plugin-search-dir= ./src/**/*.{js,ts,svelte,json,scss}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "pack:linux": "electron-packager . --overwrite --asar --platform=linux --arch=x64 --icon=./build/icon.png  --out=distlinux",
    "pack:deb": "electron-installer-debian --src distlinux/xiaomiquan-linux-x64/  --arch amd64 --config debian.json",
    "pack:win": "electron-packager . --overwrite --platform=win32  --arch=x64 --out=distwin",
    "pack:win32": "electron-packager . --overwrite --platform=win32  --arch=ia32 --out=distwin32",
    "pack:wininstaller": "electron-installer-windows --src distwin/xiaomiquanwrite-win32-x64/ --dest distwin/installers/",
    "dist-dev": "electron-builder --dir",
    "dist": "electron-builder",
    "distwin": "electron-builder --windows nsis:ia32"
  },
  "dependencies": {
