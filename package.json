    "marked": "^4.0.5",
    "moment": "^2.29.1",
    "mousetrap": "^1.6.5",
    "node-fetch": "^2.6.1",
    "nzh": "^1.0.5",
    "rxjs": "^7.4.0",
    "semver": "^7.3.5",
    "sortablejs": "^1.13.0",
